---
// Marquee Section with scrolling images and text
---

<section id="marquee_box">
  <!-- MARQUEE IMAGES -->
  <div class="marquee">
    <div class="marquee__group">
      <img src="/figma/1.png" alt="design-1">
      <img src="/figma/2.png" alt="design-2">
      <img src="/figma/3.png" alt="design-3">
      <img src="/figma/4.png" alt="design-4">
      <img src="/figma/5.png" alt="design-5">
    </div>
    <div aria-hidden="true" class="marquee__group">
      <img src="/figma/1.png" alt="design-1">
      <img src="/figma/2.png" alt="design-2">
      <img src="/figma/3.png" alt="design-3">
      <img src="/figma/4.png" alt="design-4">
      <img src="/figma/5.png" alt="design-5">
    </div>
  </div>
  
  <!-- MARQUEE TEXT -->
  <div class="marquee marquee--borders" style="--duration: 100s">
    <div class="marquee__group">
      <p>FIGMA</p>
      <p aria-hidden="true">SAMPLE</p>
      <p aria-hidden="true">FIGMA</p>
    </div>
    <div aria-hidden="true" class="marquee__group">
      <p>SAMPLE</p>
      <p>FIGMA</p>
      <p>SAMPLE</p>
    </div>
  </div>
  
  <!-- MARQUEE REVERSE -->
  <div class="marquee marquee--reverse">
    <div class="marquee__group">
      <img src="/figma/6.png" alt="design-6">
      <img src="/figma/7.png" alt="design-7">
      <img src="/figma/8.png" alt="design-8">
      <img src="/figma/9.png" alt="design-9">
      <img src="/figma/10.png" alt="design-10">
    </div>
    <div aria-hidden="true" class="marquee__group">
      <img src="/figma/6.png" alt="design-6">
      <img src="/figma/7.png" alt="design-7">
      <img src="/figma/8.png" alt="design-8">
      <img src="/figma/9.png" alt="design-9">
      <img src="/figma/10.png" alt="design-10">
    </div>
  </div>
</section>
